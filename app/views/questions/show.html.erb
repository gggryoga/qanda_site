<h1> show </h1>
<p>
    <strong>title:</strong>
    <%= @question.title %>
</p>
<p>
    <strong>name:</strong>
    <%= @question.name %>
</p>
<p>
    <strong>content:</strong>
    <%= @question.content %>
</p>

<h2>answers</h2>
<% @question.answers.each do |answer| %>
    <p>
        Name:<br>
        <%= answer.name %>
    </p>
    <p>
        Content:<br>
        <%= answer.content %>
    </p>

# <%= link_to 'destroy', question_answer_path(@question, answer), data: { turbo_method: "delete", turbo_confirm: 'Are you sure?' } %>
<% end %>

<h2>add a answer</h2>
<%= form_with(model: [@question, @question.answers.build]) do |form| %> 
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </div>
    <div>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
    </div>
    <div>
    <%= form.submit %>
    </div>
    <style>
        div {
            text-align: center;
        }
    </style>
<% end %>

<%= link_to 'edit', edit_question_path(@question) %>
<%= link_to 'home', questions_path %>


